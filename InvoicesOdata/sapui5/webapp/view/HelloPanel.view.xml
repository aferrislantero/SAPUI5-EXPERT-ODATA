<mvc:View controllerName="logaligroup.sapui5.controller.HelloPanel"
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:core="sap.ui.core" 
          displayBlock="true">
        <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
            <content>
                <Button id="btnDia" icon="sap-icon://action" text="{i18n>helloDialogBut}"  press=".onOpenDialog" class="sapUiSmallMarginEnd" />
                <Button id="btn" text="{i18n>showHelloButtonText}" press=".onShowHello"  class="sapUiSmallMarginEnd" />
                <Input id="input"       value="{/recipient/name}"
                            valueLiveUpdate="true"
                                        width="40%" />
                <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapThemeHighligth"/>
            </content>
        </Panel>
        <core:Fragment fragmentName="logaligroup.sapui5.view.Form01" type="XML"/>
</mvc:View>